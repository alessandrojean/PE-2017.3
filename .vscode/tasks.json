{
    "version": "2.0.0",
    "command": "gcc",
    "args": ["${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": "absolute",
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}